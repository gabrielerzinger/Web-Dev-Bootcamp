<% include ../partials/header %>
<div class="container">
    
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpRep</p>
            <div class="list-group">
                <li class="list-group-item">Info 1</li>
                <li class="list-group-item active">Info 3</li>
                <li class="list-group-item">Info 2</li>
            </div>
        </div>
        
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="image-responsive" src = "<%= rep.image %>" >
                <div class="caption">
                    <h4 class="pull-right"><strong>R$ 600</strong></h4>
                    <h4><a><%= rep.name %></a></h4>
                    <p><%= rep.description %></p>
                </div>
            </div>
            
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-primary btn-sucess" href="/reps/<%=rep._id%>/comments/new" role="button">Add new Comment</a>
                </div>            
                                    
                    
                        <% rep.comments.forEach(function(com){%>
                            <div class="row">
                                <div class="col-md-12">
                                 <strong><%= com.author %></strong>
                                 <span class="pull-right">10 days ago</span>
                                 <p><%= com.text %></p>
                                </div>
                            </div>
                            
                        <% }); %>
                               
                    
            </div>
        </div>
    </div>

    
    
    

    
</div>
<% include ../partials/footer %>