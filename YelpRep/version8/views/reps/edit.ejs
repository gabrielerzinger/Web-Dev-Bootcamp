<% include ../partials/header %>

<div class = "container">
    
    <h1 style = "text-align: center">Edit <%= rep.name %></h1>
    
    <div style = "width: 30%; margin: 25px auto;">
        <form action="/reps/<%= rep._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="rep name" name="rep[name]" value = "<%= rep.name %>">
            </div>
            <div class="form-group">
            <input class="form-control" type="text" placeholder="img url" name="rep[image]" value = "<%= rep.image %>">
            </div>
            <div class="form-group">
            <input class="form-control" type="text" placeholder="Say something about the place" name="rep[description]" value = "<%= rep.description %>">
            </div>
            <div class="form-group">
            <button class="btn btn-primary btn-lg btn-default btn-block">Edit</button>
            </div>
        </form>
    <a href = "/reps"> Go Back </a>
    </div>    
    
    
</div>

<% include ../partials/footer %>
